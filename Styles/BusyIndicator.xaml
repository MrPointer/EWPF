    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:EWPF.Controls">

    <Style x:Key="RotatingCanvasStyle" TargetType="{x:Type Canvas}">
        <!--<Style.Triggers>
            <Trigger Property="IsVisible" Value="True">

                <Trigger.EnterActions>
                    <BeginStoryboard Name="Storyboard_Rotate">
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle" From="0" To="360" 
                                                             Duration="0:0:5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>

                <Trigger.ExitActions>
                    <StopStoryboard BeginStoryboardName="Storyboard_Rotate" />
