<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:String x:Key="ThemeName">Light Theme</sys:String>

    <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3" />
    <SolidColorBrush x:Key="DarkPrimaryColor" Color="#1976D2" />
    <SolidColorBrush x:Key="LightPrimaryColor" Color="#BBDEFB" />
    <SolidColorBrush x:Key="AccentColor" Color="#BDBDBD" />
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#212121" />
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#757575" />
    <SolidColorBrush x:Key="DividerColor" Color="#E0E0E0" />
    <SolidColorBrush x:Key="GraphicsColor" Color="#FFFFFF" />

</ResourceDictionary>